echo "Setting the required capabilities for anon service"
setcap "cap_dac_override,cap_sys_admin,cap_sys_rawio+eip" /usr/bin/anon_service

echo "Create user anon"
adduser --system --no-create-home anon

groupadd anon
usermod -a -G anon anon

systemctl daemon-reload
echo "anon_service configured (type systemctl start anon_service.service to start it)"
